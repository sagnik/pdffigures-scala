<?xml version="1.0" encoding="UTF-8"?>
<!-- The layers root element contains all different layers and specifies their appearance. -->
<layers>

  <!-- Each layer should be represented here with the name for displaying in the GUI and the corresponding source object. -->
  <layer name="Text Blocks" source="text-block">
  
    <!-- Specifies the shape of the object. For new, unknown shapes check the Enumeration "Shapes" and the corresponding printing
    in the "paintSegments" method of the "StyledSegments" class. -->   
    <shape>rectangle</shape>
    
    <!-- Specifies whether the printed shape should be filled or not. -->
    <filled>true</filled>
    
    <!-- Specifies the RGB and the alpha value of the shape. All values must be between 0 and 255.
    A alpha value of 255 describes a fully opaque color. -->
    <color>
      <r>255</r>
      <g>0</g>
      <b>0</b>
      <a>63</a>
    </color>
    
    <!-- Specifies the stroke width of the shape. -->
    <stroke-width>1</stroke-width>
    
  </layer>

  <layer name="Lines" source="line-segment"> 
    <shape>line</shape>
    <filled>true</filled>
    <color>
      <r>255</r>
      <g>0</g>
      <b>0</b>
      <a>255</a>
    </color>
    <stroke-width>1</stroke-width>  
  </layer>
  
  <layer name="Rectangles (filled)" source="filled-rect"> 
    <shape>rectangle</shape>
    <filled>true</filled>
    <color>
      <r>0</r>
      <g>255</g>
      <b>0</b>
      <a>63</a>
    </color>
    <stroke-width>1</stroke-width>  
  </layer>
  
</layers>